<XLangExampleProgram>
    <echo message="A sample XML language program"/>

    <var name="myVar1" value="10"/>
    <var name="mySimpleVar" value="True"/>

    <func name="myFunction1">
        <echo message="A sample function"/>
        <var name="myVar1" value="20"/>
        <var name="myFunVar1" value="10"/>
        <echo message="Variables are ${myVar1}, ${mySimpleVar}, ${myFunVar1}, ${mySimpleFunVar}"/>
        <var name="mySimpleFunVar" value="True"/>

        <return/>
        <echo message="*** This message should not get printed"/>
        <echo message="&amp; This message should not get printed"/>
        <echo message=": This message should not get printed"/>
        <echo message="-This message should not get printed"/>
        <echo message="% This message should not get printed"/>
        <echo message="@ This message should not get printed"/>
    </func>

    <echo message="Before myVar1=${myVar1} mySimpleVar=${mySimpleVar} myFunVar1=${myFunVar1} mySimpleFunVar=${mySimpleFunVar}"/>
    <call name="myFunction1" outputParameters="[myFunVar1, mySimpleFunVar]"/>
    <echo message="After myVar1=${myVar1} mySimpleVar=${mySimpleVar} myFunVar1=${myFunVar1} mySimpleFunVar=${mySimpleFunVar}"/>

    <var name="pointer" value="myVar1"/>
    <echo message="Value of object at pointer is ${${pointer}}"/>

    <import fileName="SampleIncludeXMLFile.xml"/>

    <echo message="Before myVar2=${myVar2} mySimpleVar2=${mySimpleVar2} myFunVar2=${myFunVar2} mySimpleFunVar2=${mySimpleFunVar2}"/>
    <call name="myFunction2" outputParameters="[myFunVar2, mySimpleFunVar2]"/>
    <echo message="After myVar2=${myVar2} mySimpleVar2=${mySimpleVar2} myFunVar2=${myFunVar2} mySimpleFunVar2=${mySimpleFunVar2}"/>

    <var name="pointer2" value="myVar2"/>
    <echo message="Value of object at pointer is ${${pointer2}}"/>
</XLangExampleProgram>